generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Passenger {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String
  password  Password?
  airplanes Airplane[] @relation("AirplaneToPassenger")
  airports  Airport[]  @relation("AirportToPassenger")
  seats     Seat[]     @relation("PassengerToSeat")
}

model Password {
  hash        String
  passengerId String    @unique
  passenger   Passenger @relation(fields: [passengerId], references: [id], onDelete: Cascade)
}

model Airport {
  id         String      @id @default(cuid())
  name       String      @unique
  city       String
  state      String
  country    String
  airplanes  Airplane[]  @relation("AirplaneToAirport")
  passengers Passenger[] @relation("AirportToPassenger")
}

model Airplane {
  id             String      @id @default(cuid())
  departure_time DateTime
  arrival_time   DateTime
  seats          Seat[]
  airports       Airport[]   @relation("AirplaneToAirport")
  passengers     Passenger[] @relation("AirplaneToPassenger")
}

model Seat {
  id          String      @id @default(cuid())
  seat_number Int
  seat_row    Int
  seat_class  String
  airplaneId  String
  airplane    Airplane    @relation(fields: [airplaneId], references: [id])
  passengers  Passenger[] @relation("PassengerToSeat")
}
